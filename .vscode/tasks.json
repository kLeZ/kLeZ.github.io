{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Serve",
			"type": "shell",
			"command": "./_scripts/serve",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": [
				"$jekyll-error-watch",
				"$jekyll-warning-watch"
			]
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "./_scripts/build",
			"problemMatcher": [
				"$jekyll-error",
				"$jekyll-warning"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
